<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:descendantFocusability="blocksDescendants" >

    <RelativeLayout
        android:id="@+id/pdt_layout_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <TextView
            android:id="@+id/row_message"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:padding="6dp"
            android:textSize="17sp" />
        
        

        
		<ImageView
            android:id="@+id/check_smsToSend"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/row_message"
            android:layout_alignParentRight="true"
            android:layout_marginRight="3dp"
            android:background="@null"
            android:contentDescription="@string/selectedsms" />
        
			
	       
        
       
        
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/pdt_layout_item"
        android:background="@color/mainBackground" />

</RelativeLayout>
